{
  "name": "balance-sheet-pro",
  "version": "0.1.0",
  "private": true,
  "description": "BalanceSheet Pro - Node.js Express API for personal finance tracking",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --runInBand --coverage",
    "test:watch": "jest --watch",
    "test:perf": "k6 run tests/performance.test.js",
    "test:perf:ci": "k6 run --out json=perf-results.json --tag testid=local-run tests/performance.test.js",
    "test:perf:local": "k6 run tests/performance.local.test.js",
    "lint": "eslint ."
  },
  "keywords": [
    "finance",
    "express",
    "devops",
    "ci",
    "cd"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.0",
    "prom-client": "^14.2.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "k6": "^0.49.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.1.1"
  }
}
